'<h1>User Login</h1>
	<div>
      <% if notice %>
        <h1><%= notice %></h1>
      <% end %>
      
      <h2>Log in</h2>
      <%= form_tag login_path, method: 'post' do %>
        <div>
          <label>
            Email<br />
            <%= text_field_tag :email %>
          </label>
        </div>

        <div>
          <label>
            Password<br />
            <%= password_field_tag :password %>
          </label>
        </div>

        <%= submit_tag "Log in" %>
      <% end %>
    </div>
  </section>
</div>
